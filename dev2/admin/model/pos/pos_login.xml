<modification>    <id>POS Login Page</id>    <version>1.0</version>    <vqmver>2.x</vqmver>    <author>Jimmy: flyingmel.java@gmail.com, Jason: hh4cimm@yahoo.com</author>    <file name="admin/controller/common/login.php">		<operation>			<search position="after"><![CDATA[$this->template = 'common/login.tpl';]]></search>
			<add><![CDATA[$this->load->model('user/user');			$this->data['users'] = $this->model_user_user->getUsers();]]></add>
		</operation>    </file>    <file name="admin/view/template/common/login.tpl">		<operation>			<search position="replace"><![CDATA[<input type="text" name="username" value="<?php echo $username; ?>" style="margin-top: 4px;" />]]></search>			<add><![CDATA[<select name="username" style="margin-top: 4px;">			<?php 			if (!empty($users)) {				foreach ($users as $user) {			?>				<option value="<?php echo $user['username']; ?>"><?php echo $user['username']; ?></option>			<?php				}			}			?>			</select>]]></add>		</operation>		<operation>			<search position="before" offset="2"><![CDATA[<script type="text/javascript">]]></search>			<add><![CDATA[<div style="overflow: hidden; width: 398px; height: 180px; margin-top: 10px; margin-left: auto; margin-right: auto; border: 1px solid #CCCCCC;">				<?php					$pos_keys = array('1', '2', '3', 'clear', '4', '5', '6', '0', '7', '8', '9', 'Del');					$row = 3; $col = 4;				?>				<table id="keyboard_keys" style="padding: 5px; border-spacing: 12px 2px; table-layout: fixed; width: 300px;">				<?php					for ($col_i = 0; $col_i < $col; $col_i++) {				?>					<col style="width: 82px;"/>				<?php					}					for ($row_i = 0; $row_i < $row; $row_i++) {				?>					<tr>				<?php						for ($col_i = 0; $col_i < $col; $col_i++) {							$key_index = $col_i + $row_i * $col;							if ($key_index < sizeof($pos_keys)) {								$key_value = $pos_keys[$key_index];								$key_name = $key_value;								if ($key_name == 'clear') {									$key_name = 'C';								}				?>						<td id="keyboard_td_<?php echo $key_index; ?>" style="overflow: hidden; text-align: center; vertical-align: middle; cursor: pointer; padding-top: 10px; padding-bottom: 10px; border: 1px solid #CCCCCC; ">							<span style="font-family: impact, 'Nimbus Sans L', 'League Gothic','Bebas Neue','Arial Narrow', Arial, sans-serif; font-size: 26px; font-stretch: ultra-condensed; color: #005375;"><?php echo $key_name; ?></span>							<input type="hidden" value="<?php echo $key_value; ?>" />						</td>				<?php							}						}				?>					</tr>				<?php					}				?>				</table>			</div>]]></add>		</operation>		<operation>			<search position="after"><![CDATA[<script type="text/javascript">]]></search>			<add><![CDATA[$('td[id^=keyboard_td]').live('mousedown', function(e) {				var keyValue = $(this).find('input').val();				// handle the key press				$('input[name=password]').focus();				if (keyValue == 'clear') {					$('input[name=password]').attr('value', '');				} else if (keyValue == 'Del') {					var text = $('input[name=password]').val();					$('input[name=password]').attr('value', text.substr(0, text.length-1));				}else {					$('input[name=password]').attr('value', $('input[name=password]').val() + keyValue);				}			});]]></add>		</operation>    </file></modification>
