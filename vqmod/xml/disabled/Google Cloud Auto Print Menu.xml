<modification>
	<id>Uber Auto Print Menu Shourtcut</id>
	<version>1.5.0</version>
	<vqmver>2.1</vqmver>
	<author>crojo</author>
	<file name="admin/controller/common/header.php">
		<operation error="abort">
			<search position="before"><![CDATA[$this->data['text_zone']]]></search>
			<add><![CDATA[		$this->data['text_googleprint'] = $this->language->get('text_googleprint');]]></add>
		</operation>
		<operation error="abort">
			<search position="before"><![CDATA[$this->data['zone']]]></search>
			<add><![CDATA[			$this->data['googleprint'] = $this->url->link('module/googleprint', 'token=' . $this->session->data['token'], 'SSL');]]></add>
		</operation>
	</file>
	<file name="admin/language/*/common/header.php">
		<operation error="abort">
			<search position="before"><![CDATA[$_['text_zone']]]></search>
			<add><![CDATA[$_['text_googleprint']               = 'Uber Auto Print';]]></add>
		</operation>
	</file>
	<file name="admin/view/template/common/header.tpl">
		<operation error="abort">
			<search position="after"><![CDATA[<li><a href="<?php echo $feed; ?>"><?php echo $text_feed; ?></a></li>]]></search>
			<add><![CDATA[          <li><a href="<?php echo $googleprint; ?>"><?php echo $text_googleprint; ?></a></li>]]></add>
		</operation>
	</file>
</modification>